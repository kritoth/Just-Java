<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:src="@drawable/coffeebeans" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"

        android:layout_margin="24dp"
        android:padding="24dp">

        <TextView
            android:id="@+id/quantity_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/quantity"
            android:textColor="@color/colorFont"
            android:background="@color/backgroundText"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/plus"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/plus"
                android:textColor="@color/colorButtonText"
                android:onClick="increment"/>

            <TextView
                android:id="@+id/quantity_amount"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:hint="0"
                android:textColorHint="@color/colorFont"
                android:background="@color/backgroundText"
                android:textSize="24sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />

            <Button
                android:id="@+id/minus"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/minus"
                android:textColor="@color/colorButtonText"
                android:onClick="decrement"/>
        </LinearLayout>

        <TextView
            android:id="@+id/price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/price"
            android:textColor="@color/colorFont"
            android:background="@color/backgroundText"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/price_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:hint="$0.00"
            android:textColorHint="@color/colorFont"
            android:background="@color/backgroundText"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/order"
            android:textColor="@color/colorButtonText"
            android:onClick="submitOrder"/>

    </LinearLayout>

</RelativeLayout>